.container {
  padding: 20px;
}

.text-input {
  width: 100%;
  height: 100px;
  border: 1px solid #ccc;
  margin-bottom: 20px;
}

.image-preview {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20px;
}

.preview-image {
  width: 100px;
  height: 100px;
  margin: 5px;
}

.video-preview {
  width: 100%;
  height: 200px;
  margin-bottom: 20px;
}

.actions {
  display: flex;
  justify-content: space-between;
}

.action-button {
  background-color: #ff6600;
  color: white;
  padding: 10px;
  border-radius: 5px;
  width: 30%;
  text-align: center;
}

.publish-button {
  background-color: #4caf50;
  color: white;
  padding: 10px;
  width: 100%;
  text-align: center;
  border-radius: 5px;
}
