.post-item {
  margin: 10px;
  padding: 15px;
  border: 1px solid #ddd;
  border-radius: 10px;
  background-color: #fff;
}

.header {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}

.username {
  font-size: 16px;
  font-weight: bold;
}

.content {
  margin-bottom: 10px;
}

.image-container {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 10px;
}

.post-image {
  width: 100px;
  height: 100px;
  margin: 5px;
  border-radius: 5px;
}

.video-container {
  margin-bottom: 10px;
}

.post-video {
  width: 100%;
  max-width: 400px;
  height: 250px;
}

.actions {
  display: flex;
  justify-content: space-around;
}

.btn {
  padding: 5px 10px;
  border: none;
  border-radius: 20px;
  background-color: #2c2c2c;
  color: white;
}

.btn:active {
  background-color: #005bb5;
}

.time {
  font-size: 12px;
  color: #888;
  text-align: right;
}
