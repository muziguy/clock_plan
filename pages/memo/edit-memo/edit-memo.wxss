.edit-memo-container {
  padding: 20px;
  background-color: #f7f9fc;
  border-radius: 8px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  max-width: 600px;
  margin: 0 auto;
}

.edit-memo-header {
  margin-bottom: 20px;
}

.edit-memo-title {
  font-size: 24px;
  font-weight: bold;
  color: #333;
}

.edit-memo-input {
  height: 7.5vh;
  width: 100%;
  padding: 12px;
  margin-bottom: 20px;
  font-size: 15px;
  border: 1px solid #dcdfe6;
  border-radius: 8px;
  background-color: #fff;
  box-sizing: border-box;
  outline: none;
}

.edit-memo-title1 {
  font-weight: 700;
}

.edit-memo-input:focus {
  border-color: #409eff;
  box-shadow: 0 0 5px rgba(64, 158, 255, 0.6);
}

.edit-memo-textarea {
  width: 100%;
  padding: 12px;
  margin-bottom: 20px;
  font-size: 16px;
  border: 1px solid #dcdfe6;
  border-radius: 8px;
  background-color: #fff;
  box-sizing: border-box;
  outline: none;
  height: 200px;
  resize: none;
}

.edit-memo-textarea:focus {
  border-color: #409eff;
  box-shadow: 0 0 5px rgba(64, 158, 255, 0.6);
}

.edit-memo-save {
  width: 100%;
  padding: 14px;
  background-color: #2c2c2c;
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.edit-memo-save:hover {
  background-color: #66b1ff;
}

.edit-memo-save:active {
  background-color: #3383d1;
}